@model IEnumerable<WebApplicationMVCBatch3.Models.Country>

@{
    ViewData["Title"] = "GetCountry";
}

<h1>GetCountry</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cname)
            </th>
            <th>
                State Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cname)
                </td>
               
                    <td>
                        <ul>
                        @foreach (var data in item.States)
                        {
                            <li>
                                @data.sname
                            </li>
                        }
                        </ul>

                    </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Cid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Cid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Cid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
